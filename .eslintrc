{
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "mocha": true
  },

  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "eol-last": [0],
    "consistent-return": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-use-before-define": [2, "nofunc"],
    "no-process-exit": [0]
  }
}
